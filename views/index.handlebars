<div class="container">

  <div class="row">

    <div class="col-sm-12">

      <img class="img-fluid burger-img" src="assets/images/burger-of-the-day.png" alt="">

      <h1 class="text-center">Burger of the Day</h1>

    </div>

  </div>

</div>

<div class="container">

  <div class="row">

    <div class="col-sm-5 mx-auto panel">

      <h2 class="text-center">Eat</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burger devoured=false}}
        {{/unless}}
        {{/each}}
      </ul>

    </div>

    <div class="col-sm-5 mx-auto panel">

      <h2 class="text-center">Order Again</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burger devoured=true}}
        {{/if}}
        {{/each}}
      </ul>

    </div>

  </div>

</div>

<div class="container">

  <div class="row">

    <div class="col-sm-8 mx-auto panel">

      <h2 class="text-center">What's your favorite burger?</h2>

      <form class="form-inline d-flex justify-content-between burger-form">
        <div class="form-group mb-2">
          <label for="burger" class="sr-only">Burger</label>
          <input type="text" readonly class="form-control-plaintext" id="burger" value="Burger">
        </div>
        <div class="form-group mx-sm-3 mb-2">
          <label for="burger-name" class="sr-only">burger name</label>
          <input type="password" class="form-control" id="burger-name" placeholder="Enter your favorite burger">
        </div>
        <button type="submit" class="btn btn-primary mb-2">Chow Down!</button>
      </form>

    </div>

  </div>

</div>
